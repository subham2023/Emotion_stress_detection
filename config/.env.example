# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=production
PORT=3000

# Domain Configuration
DOMAIN=your-domain.com
ACME_EMAIL=admin@your-domain.com

# =============================================================================
# Database Configuration (MySQL)
# =============================================================================
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_DATABASE=emotion_stress_db
MYSQL_USER=app_user
MYSQL_PASSWORD=your-secure-user-password-here

# Complete Database URL (auto-generated)
DATABASE_URL=mysql://app_user:your-secure-user-password-here@mysql:3306/emotion_stress_db

# =============================================================================
# Cache Configuration (Redis)
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# =============================================================================
# AWS S3 Configuration
# =============================================================================
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# =============================================================================
# Authentication
# =============================================================================
# Using local authentication (no external OAuth provider required)
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_PASSWORD=your-grafana-admin-password

# =============================================================================
# Container Registry Configuration
# =============================================================================
REGISTRY_OWNER=your-username

# =============================================================================
# Development Only Settings
# =============================================================================
# These are only used for development environment

# Development Database
MYSQL_ROOT_PASSWORD_DEV=your-dev-root-password
MYSQL_DATABASE_DEV=emotion_stress_dev
MYSQL_USER_DEV=dev_user
MYSQL_PASSWORD_DEV=your-dev-user-password

# Development S3
S3_BUCKET_DEV=your-dev-s3-bucket

# Redis Commander (Development Tool)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# =============================================================================
# Optional: External Service URLs
# =============================================================================
# Add these if you have external dependencies

# External API endpoints
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key

# Email configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password

# =============================================================================
# Security Settings
# =============================================================================
# CORS settings
# CORS_ORIGIN=https://your-domain.com

# CORS settings
# CORS_ORIGIN=https://your-domain.com

# =============================================================================
# Performance Settings
# =============================================================================
# Connection pool sizes
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# REDIS_POOL_MIN=2
# REDIS_POOL_MAX=10

# =============================================================================
# Logging Configuration
# =============================================================================
# LOG_LEVEL=info
# LOG_FORMAT=json

# =============================================================================
# Feature Flags
# =============================================================================
# ENABLE_METRICS=true
# ENABLE_PROFILING=false
# ENABLE_DEBUG=false

# =============================================================================
# Docker Swarm Specific
# =============================================================================
# These are automatically configured during deployment

# Node affinity and constraints
# CONSTRAINT_NODE_LABEL=environment=production
# PREFERENCE_NODE_LABEL=node-type=application

# Resource limits
# MEMORY_LIMIT=2G
# CPU_LIMIT=1.0
# MEMORY_RESERVATION=1G
# CPU_RESERVATION=0.5