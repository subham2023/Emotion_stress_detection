# Development Environment Configuration
# This file is safe to use for local development

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
PORT=3000

# Domain Configuration
DOMAIN=dev.emotion-stress.local
ACME_EMAIL=admin@dev.emotion-stress.local

# =============================================================================
# Database Configuration (MySQL)
# =============================================================================
MYSQL_ROOT_PASSWORD=DevRootP@ssw0rd!2024
MYSQL_DATABASE=emotion_stress_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=DevAppP@ssw0rd!2024

# Complete Database URL
DATABASE_URL=mysql://dev_user:DevAppP@ssw0rd!2024@mysql:3306/emotion_stress_dev

# =============================================================================
# Cache Configuration (Redis)
# =============================================================================
REDIS_PASSWORD=DevRedisP@ssw0rd!2024
REDIS_URL=redis://:DevRedisP@ssw0rd!2024@redis:6379/1

# =============================================================================
# AWS S3 Configuration (Development)
# =============================================================================
# Use local S3 compatible storage or development bucket
S3_BUCKET=emotion-stress-dev-files
# For local development, you might use MinIO or local file storage
AWS_ACCESS_KEY_ID=dev-access-key
AWS_SECRET_ACCESS_KEY=dev-secret-key
AWS_REGION=us-west-2
# For local MinIO:
# S3_ENDPOINT=http://minio:9000

# =============================================================================
# Authentication (Manus OAuth) - Development
# =============================================================================
# Use development OAuth credentials or mock authentication
MANUS_CLIENT_ID=dev-manus-client-id
MANUS_CLIENT_SECRET=dev-manus-client-secret

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_PASSWORD=admin123
# Use weaker password for development convenience

# =============================================================================
# Container Registry Configuration
# =============================================================================
REGISTRY_OWNER=your-username

# =============================================================================
# Security Settings (Development)
# =============================================================================
# Use predictable secrets for development convenience
JWT_SECRET=dev-jwt-secret-32-chars-here
SESSION_SECRET=dev-session-secret-32-chars-here

# CORS settings - allow local development
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Performance Settings (Development)
# =============================================================================
DB_POOL_MIN=1
DB_POOL_MAX=5
REDIS_POOL_MIN=1
REDIS_POOL_MAX=5

# =============================================================================
# Logging Configuration (Development)
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# =============================================================================
# Feature Flags (Development)
# =============================================================================
ENABLE_METRICS=true
ENABLE_PROFILING=true
ENABLE_DEBUG=true

# =============================================================================
# Docker Swarm Development Constraints
# =============================================================================
CONSTRAINT_NODE_LABEL=environment=development
PREFERENCE_NODE_LABEL=node-type=development

MEMORY_LIMIT=3G
CPU_LIMIT=2.0
MEMORY_RESERVATION=1.5G
CPU_RESERVATION=0.75

# =============================================================================
# Development Tools Configuration
# =============================================================================
# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# Adminer (Database Admin)
ADMINER_ENABLED=true

# =============================================================================
# SSL/TLS Configuration (Development)
# =============================================================================
# Development uses HTTP, not HTTPS
SSL_ENABLED=false

# =============================================================================
# Development Specific
# =============================================================================
# Enable hot reloading
HOT_RELOAD=true

# Enable source maps
SOURCE_MAPS=true

# Development database host (overrides default)
# MYSQL_HOST=127.0.0.1

# Development Redis host (overrides default)
# REDIS_HOST=127.0.0.1

# =============================================================================
# Testing Configuration
# =============================================================================
# Test Database
MYSQL_DATABASE_TEST=emotion_stress_test
DATABASE_URL_TEST=mysql://dev_user:DevAppP@ssw0rd!2024@mysql:3306/emotion_stress_test

# Test Redis
REDIS_URL_TEST=redis://:DevRedisP@ssw0rd!2024@redis:6379/2

# =============================================================================
# Development Services
# =============================================================================
# Enable development tools
ENABLE_ADMINER=true
ENABLE_REDIS_COMMANDER=true
ENABLE_DEBUG_MODE=true

# Ports for development tools
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
DEBUG_PORT=9229